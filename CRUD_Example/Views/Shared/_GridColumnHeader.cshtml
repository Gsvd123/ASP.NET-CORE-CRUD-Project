@if (ViewBag.CurrentSortBy == @ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.ASD.ToString())
{
    <th>
        <a href="~/persons/index?SearchBy=@(ViewBag.CurrentSearchBy)&SearchString=@(ViewBag.CurrentSearchString)&SortBy=@(ViewBag.ColumnName)&SortOrder=@(SortOrderOptions.DESC)">
           @ViewBag.DisplayName
        </a>

        <i class="fa-solid fa-arrow-up"></i>
    </th>
}
else if (ViewBag.CurrentSortBy == @ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.DESC.ToString())
{
    <th>
        <a href="~/persons/index?SearchBy=@(ViewBag.CurrentSearchBy)&SearchString=@(ViewBag.CurrentSearchString)&SortBy=@(ViewBag.ColumnName)&SortOrder=@(SortOrderOptions.ASD)">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-arrow-down"></i>

    </th>
}
else
{
    <th>
        <a href="~/persons/index?SearchBy=@(ViewBag.CurrentSearchBy)&SearchString=@(ViewBag.CurrentSearchString)&SortBy=@(ViewBag.ColumnName)&SortOrder=@SortOrderOptions.ASD">
            @ViewBag.DisplayName
        </a>

    </th>
}