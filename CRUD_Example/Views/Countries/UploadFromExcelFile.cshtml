@{
    ViewBag.Title = "Upload Countries from Excel";
}
<h2>Upload countries from Excel </h2>
<div class="w-50">
<form asp-action="UploadFromExcelFile" asp-controller="Countries" enctype="multipart/form-data">
   <div class="flex  form-field">

       <div class="w-25">
           <label class="form-label pt">Choose a xlsx file</label>
       </div>
       <div class="flex-1">
           <input type="file" class="form-input" name="excelFile" />
           <div class="text-red">@ViewBag.ErrorMessage</div>
           <div class="text-green">@ViewBag.Success</div>

       </div>
    </div>
  <div class="form-field flex">
       <div class="w-25">
           
       </div>
       <div class="flex-1">
           <button type="submit" class="button button-green-back">Upload</button>
       </div>
   </div>


</form>
</div>